<h1>Games#new</h1>
<p><%= @letters.join(' ') %></p>
<form action="/score" method="post">
  <label for="word"> What is the longest word you can find?</label>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'grid', @letters%>
  <input type="text" name="word" placeholder="Type the word">
  <input type="submit">
</form>
